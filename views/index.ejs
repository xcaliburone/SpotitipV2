<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/output.css">
    <link rel="stylesheet" href="../css/input.css">
    <link rel="shortcut icon" href="../images/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.css">
    <style>
        .swal-confirm-button-green { background-color: #28a745 !important; color: #fff !important; border-color: #28a745 !important; }
    </style>
    <title>Spotitip</title>
</head>

<body>
    <div class="signin min-h-screen flex items-center justify-center w-full bg-emerald-600">
        <div class="bg-neutral-800 shadow-md rounded-lg px-8 py-6 max-w-md">

            <img src="../images/SPOTITIP.png" alt="hero" class="hover:cursor-not-allowed">
            <h1 class="text-2xl font-bold text-center mb-4 dark:text-neutral-200 signinTitle">Welcome back!</h1>

            <%- include('./layouts/signinForm') %>
        </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function getUrlParameter(name) {
            name = name.replace(/[\[]/, '\\[').replace(/[\]]/, '\\]');
            var regex = new RegExp('[\\?&]' + name + '=([^&#]*)');
            var results = regex.exec(location.search);
            return results === null ? '' : decodeURIComponent(results[1].replace(/\+/g, ' '));
        }; var error = getUrlParameter('error');
        if (error === 'account-not-found') {
            Swal.fire({ icon: "error", title: "Oops...", text: "Email atau password anda mungkin salah, silahkan ulang.", customClass: { confirmButton: 'swal-confirm-button-green' }, }); }
    </script>
</body>
</html>